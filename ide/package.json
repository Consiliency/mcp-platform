{
  "name": "mcp-ide-extensions",
  "version": "1.0.0",
  "description": "IDE extensions for MCP (Model Context Protocol)",
  "main": "core/ide-extension.js",
  "scripts": {
    "test": "node test-integration.js",
    "test:unit": "jest core/**/*.test.js",
    "build:vscode": "cd vscode && npm run compile",
    "build:intellij": "cd intellij && ./gradlew build",
    "package:vscode": "cd vscode && vsce package",
    "lint": "eslint core/**/*.js"
  },
  "keywords": [
    "mcp",
    "ide",
    "vscode",
    "intellij",
    "vim",
    "language-server"
  ],
  "author": "MCP Team",
  "license": "MIT",
  "dependencies": {
    "vscode-languageserver": "^8.0.0",
    "vscode-languageserver-textdocument": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/__tests__/**/*.js"
    ]
  }
}
