{
  "gateway": {
    "apiKey": "{{WINDOWS_GATEWAY_API_KEY}}",
    "autoStartServers": ["snap-happy"],
    "mode": "windows"
  },
  "servers": {
    "snap-happy": {
      "transport": "stdio",
      "command": "C:\\Windows\\System32\\cmd.exe",
      "args": ["/c", "npx", "-y", "@mariozechner/snap-happy"],
      "environment": {
        "PATH": "C:\\Program Files\\nodejs;%PATH%"
      },
      "capabilities": ["screenshot", "gui"],
      "description": "Screenshot tool for Windows"
    }
  }
}