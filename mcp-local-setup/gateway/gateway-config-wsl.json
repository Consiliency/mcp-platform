{
  "gateway": {
    "autoStartServers": [
      "github",
      "snap-happy"
    ],
    "windowsGatewayUrl": "http://localhost:{{WINDOWS_GATEWAY_PORT}}"
  },
  "servers": {
    "snap-happy": {
      "transport": "sse",
      "url": "http://{{WINDOWS_HOST_IP}}:{{WINDOWS_GATEWAY_PORT}}/mcp",
      "capabilities": [
        "screenshot",
        "gui"
      ],
      "requiresWindowsSide": true,
      "description": "Screenshot tool running on Windows side via SSE proxy"
    },
    "memory": {
      "transport": "stdio",
      "package": "@modelcontextprotocol/server-memory",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "environment": {}
    },
    "filesystem": {
      "transport": "stdio",
      "package": "@modelcontextprotocol/server-filesystem",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/home/jenner/code"
      ],
      "environment": {},
      "mounts": {
        "win32": {
          "/workspace": "${USERPROFILE}\\Documents"
        },
        "wsl": {
          "/workspace": "${HOME}/code",
          "/windows": "/mnt/c/Users"
        },
        "darwin": {
          "/workspace": "${HOME}/Documents"
        },
        "linux": {
          "/workspace": "${HOME}/code"
        }
      }
    },
    "github": {
      "transport": "stdio",
      "package": "@modelcontextprotocol/server-github",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "environment": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": ""
      }
    }
  }
}