# MCP Local Setup Environment Configuration
# Copy this file to .env and update with your values

# ======================
# Core Platform Settings
# ======================

# MCP platform home directory - where all data is stored
MCP_HOME=${HOME}/.mcp-platform

# Node environment (development, test, production)
NODE_ENV=development

# API settings
MCP_API_KEY=your-api-key-here
MCP_API_URL=http://localhost:3000/api
CI_MCP_KEY=your-ci-api-key-here

# ======================
# Database Configuration
# ======================

# PostgreSQL settings for todo-mcp and other services
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mcp_dev
DB_USER=mcp_user
DB_PASSWORD=your-secure-password

# ======================
# Security & Authentication
# ======================

# JWT secret for authentication (generate with: openssl rand -hex 64)
JWT_SECRET=your-jwt-secret-here

# Admin credentials
ADMIN_PASSWORD=admin-password
ADMIN_API_KEY=your-admin-api-key

# Encryption key for configuration (generate with: openssl rand -hex 32)
MCP_CONFIG_ENCRYPTION_KEY=your-encryption-key-here

# Encryption key for tenant data
ENCRYPTION_KEY=your-tenant-encryption-key

# Let's Encrypt email for SSL certificates
LETSENCRYPT_EMAIL=your-email@example.com

# ======================
# Service Ports
# ======================

# Main application port
PORT=3000

# Health check service port
HEALTH_PORT=3999
HEALTH_SERVICE_URL=http://localhost:8080/health

# Service-specific ports (override defaults)
# TEST_SERVICE_PORT=4567

# ======================
# External Service APIs
# ======================

# Weather API configuration
WEATHER_API_KEY=your-weather-api-key
WEATHER_API_URL=https://api.openweathermap.org/data/2.5
CACHE_TTL=300

# ======================
# Cloud Provider Settings
# ======================

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Azure Configuration
AZURE_SUBSCRIPTION_ID=12345678-1234-1234-1234-123456789012
AZURE_LOCATION=eastus
AZURE_RESOURCE_GROUP=mcp-resources

# Google Cloud Configuration
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1

# ======================
# Docker & Container Settings
# ======================

# Docker registry for custom images
DOCKER_REGISTRY=registry.local

# Container orchestration platform
ORCHESTRATOR=kubernetes

# ======================
# Service Mesh Configuration
# ======================

# Consul HTTP API endpoint
CONSUL_HTTP_ADDR=http://localhost:8500

# ======================
# Monitoring & Logging
# ======================

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Health check intervals (milliseconds)
CHECK_INTERVAL=30000
HEALTH_TIMEOUT=5000

# ======================
# Development & Testing
# ======================

# Test-specific environment variables
TEST_MCP_HOME=${HOME}/.test-mcp-home
TEST_CONFIG=test-value

# CI/CD environment
CI=false

# Application version
APP_VERSION=1.0.0

# ======================
# System Variables
# ======================

# User information (auto-populated)
USER=${USER}

# Custom system variables
SYSTEM_VAR=system-value