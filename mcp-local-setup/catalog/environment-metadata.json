{
  "snap-happy": {
    "SNAP_HAPPY_SCREENSHOT_PATH": {
      "type": "path",
      "description": "Directory where screenshots will be saved",
      "required": true,
      "default": "${TEMP}/screenshots",
      "createIfMissing": true,
      "example": "C:\\Users\\username\\Pictures\\Screenshots"
    }
  },
  "exa": {
    "EXA_API_KEY": {
      "type": "token",
      "description": "Exa API key for web search capabilities",
      "required": true,
      "docUrl": "https://dashboard.exa.ai/api-keys",
      "instructions": "Sign in to your Exa.ai account and create a new API key"
    }
  },
  "github": {
    "GITHUB_PERSONAL_ACCESS_TOKEN": {
      "type": "token",
      "description": "GitHub personal access token for repository operations",
      "required": true,
      "docUrl": "https://docs.github.com/en/authentication/keeping-your-account-and-data-secure/managing-your-personal-access-tokens",
      "scopes": ["repo", "read:user"],
      "instructions": "Create a fine-grained personal access token with repository access"
    }
  },
  "gitlab": {
    "GITLAB_PERSONAL_ACCESS_TOKEN": {
      "type": "token",
      "description": "GitLab personal access token",
      "required": true,
      "docUrl": "https://docs.gitlab.com/ee/user/profile/personal_access_tokens.html",
      "scopes": ["api", "read_repository", "write_repository"]
    },
    "GITLAB_API_URL": {
      "type": "url",
      "description": "GitLab instance API URL",
      "required": false,
      "default": "https://gitlab.com/api/v4",
      "example": "https://gitlab.example.com/api/v4"
    }
  },
  "obsidian": {
    "VAULT_PATH": {
      "type": "path",
      "description": "Path to your Obsidian vault folder",
      "required": true,
      "example": "/home/user/Documents/ObsidianVault",
      "validation": "directory_exists"
    }
  },
  "postgres": {
    "POSTGRES_CONNECTION_STRING": {
      "type": "connection_string",
      "description": "PostgreSQL database connection string",
      "required": true,
      "example": "postgresql://username:password@localhost:5432/dbname",
      "docUrl": "https://www.postgresql.org/docs/current/libpq-connect.html#LIBPQ-CONNSTRING",
      "format": "postgresql://[user[:password]@][netloc][:port][/dbname][?param1=value1&...]"
    }
  },
  "mysql": {
    "MYSQL_HOST": {
      "type": "host",
      "description": "MySQL server hostname or IP address",
      "required": true,
      "default": "localhost",
      "example": "db.example.com"
    },
    "MYSQL_USER": {
      "type": "username",
      "description": "MySQL username",
      "required": true,
      "example": "root"
    },
    "MYSQL_PASSWORD": {
      "type": "password",
      "description": "MySQL password",
      "required": true,
      "sensitive": true
    },
    "MYSQL_DATABASE": {
      "type": "database",
      "description": "MySQL database name",
      "required": true,
      "example": "my_database"
    }
  },
  "mongodb": {
    "MONGODB_URI": {
      "type": "connection_string",
      "description": "MongoDB connection URI",
      "required": true,
      "example": "mongodb://username:password@localhost:27017/dbname",
      "docUrl": "https://www.mongodb.com/docs/manual/reference/connection-string/",
      "format": "mongodb://[username:password@]host1[:port1][,...hostN[:portN]][/[database][?options]]"
    }
  },
  "redis": {
    "REDIS_URL": {
      "type": "connection_string",
      "description": "Redis connection URL",
      "required": true,
      "example": "redis://localhost:6379",
      "format": "redis://[username:password@]host[:port][/database]"
    }
  },
  "aws": {
    "AWS_ACCESS_KEY_ID": {
      "type": "key",
      "description": "AWS access key ID",
      "required": true,
      "docUrl": "https://docs.aws.amazon.com/IAM/latest/UserGuide/id_credentials_access-keys.html",
      "instructions": "Create an IAM user and generate access keys in the AWS Console",
      "example": "AKIAIOSFODNN7EXAMPLE"
    },
    "AWS_SECRET_ACCESS_KEY": {
      "type": "secret",
      "description": "AWS secret access key",
      "required": true,
      "sensitive": true,
      "docUrl": "https://docs.aws.amazon.com/IAM/latest/UserGuide/id_credentials_access-keys.html",
      "example": "wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY"
    },
    "AWS_REGION": {
      "type": "region",
      "description": "AWS region",
      "required": false,
      "default": "us-east-1",
      "example": "us-west-2",
      "options": ["us-east-1", "us-east-2", "us-west-1", "us-west-2", "eu-west-1", "eu-central-1", "ap-southeast-1", "ap-northeast-1"]
    }
  },
  "kubernetes": {
    "KUBECONFIG": {
      "type": "path",
      "description": "Path to kubeconfig file",
      "required": false,
      "default": "~/.kube/config",
      "example": "/home/user/.kube/config",
      "validation": "file_exists"
    }
  },
  "ssh": {
    "SSH_CONFIG_PATH": {
      "type": "path",
      "description": "Path to SSH config directory",
      "required": false,
      "default": "~/.ssh",
      "example": "/home/user/.ssh",
      "validation": "directory_exists"
    }
  },
  "jira": {
    "JIRA_HOST": {
      "type": "url",
      "description": "Jira instance URL",
      "required": true,
      "example": "https://mycompany.atlassian.net",
      "validation": "url"
    },
    "JIRA_EMAIL": {
      "type": "email",
      "description": "Jira account email",
      "required": true,
      "example": "user@example.com"
    },
    "JIRA_API_TOKEN": {
      "type": "token",
      "description": "Jira API token",
      "required": true,
      "docUrl": "https://support.atlassian.com/atlassian-account/docs/manage-api-tokens-for-your-atlassian-account/",
      "instructions": "Create an API token from your Atlassian account settings"
    }
  },
  "neo4j": {
    "NEO4J_URI": {
      "type": "connection_string",
      "description": "Neo4j connection URI",
      "required": true,
      "example": "bolt://localhost:7687",
      "format": "bolt://host:port or neo4j://host:port"
    },
    "NEO4J_USER": {
      "type": "username",
      "description": "Neo4j username",
      "required": true,
      "default": "neo4j"
    },
    "NEO4J_PASSWORD": {
      "type": "password",
      "description": "Neo4j password",
      "required": true,
      "sensitive": true
    }
  },
  "elasticsearch": {
    "ELASTICSEARCH_URL": {
      "type": "url",
      "description": "Elasticsearch cluster URL",
      "required": true,
      "example": "http://localhost:9200",
      "validation": "url"
    },
    "ELASTICSEARCH_API_KEY": {
      "type": "key",
      "description": "Elasticsearch API key",
      "required": false,
      "docUrl": "https://www.elastic.co/guide/en/elasticsearch/reference/current/security-api-create-api-key.html"
    }
  },
  "browserstack": {
    "BROWSERSTACK_USERNAME": {
      "type": "username",
      "description": "BrowserStack username",
      "required": true,
      "docUrl": "https://www.browserstack.com/accounts/settings"
    },
    "BROWSERSTACK_ACCESS_KEY": {
      "type": "key",
      "description": "BrowserStack access key",
      "required": true,
      "sensitive": true,
      "docUrl": "https://www.browserstack.com/accounts/settings",
      "instructions": "Find your access key in BrowserStack account settings"
    }
  },
  "perforce": {
    "P4PORT": {
      "type": "host_port",
      "description": "Perforce server address and port",
      "required": true,
      "example": "perforce.example.com:1666",
      "format": "host:port"
    },
    "P4USER": {
      "type": "username",
      "description": "Perforce username",
      "required": true
    },
    "P4PASSWD": {
      "type": "password",
      "description": "Perforce password",
      "required": true,
      "sensitive": true
    }
  },
  "svn": {
    "SVN_USERNAME": {
      "type": "username",
      "description": "Subversion username",
      "required": true
    },
    "SVN_PASSWORD": {
      "type": "password",
      "description": "Subversion password",
      "required": true,
      "sensitive": true
    }
  },
  "bitbucket": {
    "BITBUCKET_USERNAME": {
      "type": "username",
      "description": "Bitbucket username",
      "required": true
    },
    "BITBUCKET_APP_PASSWORD": {
      "type": "password",
      "description": "Bitbucket app password",
      "required": true,
      "sensitive": true,
      "docUrl": "https://support.atlassian.com/bitbucket-cloud/docs/create-an-app-password/",
      "instructions": "Create an app password in your Bitbucket account settings"
    }
  },
  "confluence": {
    "CONFLUENCE_HOST": {
      "type": "url",
      "description": "Confluence instance URL",
      "required": true,
      "example": "https://mycompany.atlassian.net/wiki"
    },
    "CONFLUENCE_EMAIL": {
      "type": "email",
      "description": "Confluence account email",
      "required": true
    },
    "CONFLUENCE_API_TOKEN": {
      "type": "token",
      "description": "Confluence API token",
      "required": true,
      "docUrl": "https://support.atlassian.com/atlassian-account/docs/manage-api-tokens-for-your-atlassian-account/"
    }
  },
  "sonarqube": {
    "SONARQUBE_URL": {
      "type": "url",
      "description": "SonarQube server URL",
      "required": true,
      "example": "https://sonarqube.example.com"
    },
    "SONARQUBE_TOKEN": {
      "type": "token",
      "description": "SonarQube authentication token",
      "required": true,
      "docUrl": "https://docs.sonarqube.org/latest/user-guide/user-token/",
      "instructions": "Generate a token in SonarQube: My Account > Security > Generate Tokens"
    }
  },
  "1password": {
    "OP_CONNECT_HOST": {
      "type": "url",
      "description": "1Password Connect server URL",
      "required": true,
      "example": "http://localhost:8080"
    },
    "OP_CONNECT_TOKEN": {
      "type": "token",
      "description": "1Password Connect access token",
      "required": true,
      "sensitive": true,
      "docUrl": "https://developer.1password.com/docs/connect/get-started/",
      "instructions": "Create a Connect token in your 1Password account"
    }
  }
}