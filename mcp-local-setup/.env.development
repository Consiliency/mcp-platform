# MCP Development Environment Configuration
# This file contains default development settings
# Copy to .env and adjust as needed for your local setup

# ======================
# Core Platform Settings
# ======================

# Development environment
NODE_ENV=development

# Local API endpoint
MCP_API_URL=http://localhost:3000/api
MCP_API_KEY=dev-api-key-12345
CI_MCP_KEY=dev-ci-key-12345

# Local platform directory
MCP_HOME=${HOME}/.mcp-platform

# ======================
# Database Configuration
# ======================

# Local PostgreSQL settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mcp_dev
DB_USER=mcp_user
DB_PASSWORD=mcp_dev_password

# ======================
# Security & Authentication
# ======================

# Development JWT secret (NOT for production use)
JWT_SECRET=dev-jwt-secret-do-not-use-in-production

# Development admin credentials
ADMIN_PASSWORD=admin123
ADMIN_API_KEY=dev-admin-key-12345

# Development encryption keys (NOT for production use)
MCP_CONFIG_ENCRYPTION_KEY=dev-encryption-key-32-bytes-long
ENCRYPTION_KEY=dev-tenant-encryption-key

# Development SSL (self-signed)
LETSENCRYPT_EMAIL=dev@localhost

# ======================
# Service Configuration
# ======================

# Development ports
PORT=3000
HEALTH_PORT=3999
HEALTH_SERVICE_URL=http://localhost:8080/health

# ======================
# External Service APIs
# ======================

# Weather API (get free key from openweathermap.org)
WEATHER_API_KEY=your-dev-weather-api-key
WEATHER_API_URL=https://api.openweathermap.org/data/2.5
CACHE_TTL=300

# ======================
# Cloud Provider Settings
# ======================

# Local/Mock AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012
AWS_ACCESS_KEY_ID=AKIAIOSFODNN7EXAMPLE
AWS_SECRET_ACCESS_KEY=wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY

# Local/Mock Azure Configuration
AZURE_SUBSCRIPTION_ID=00000000-0000-0000-0000-000000000000
AZURE_LOCATION=eastus
AZURE_RESOURCE_GROUP=mcp-dev

# Local/Mock GCP Configuration
GCP_PROJECT_ID=mcp-dev-project
GCP_REGION=us-central1

# ======================
# Container & Orchestration
# ======================

# Local Docker registry
DOCKER_REGISTRY=localhost:5000

# Local orchestration
ORCHESTRATOR=docker-compose

# Local service mesh
CONSUL_HTTP_ADDR=http://localhost:8500

# ======================
# Monitoring & Logging
# ======================

# Verbose logging for development
LOG_LEVEL=debug

# Fast health checks for development
CHECK_INTERVAL=10000
HEALTH_TIMEOUT=5000

# Development version
APP_VERSION=dev-local

# ======================
# Development Features
# ======================

# Development-specific settings
ENABLE_DEBUG_MODE=true
ENABLE_HOT_RELOAD=true
ENABLE_STRICT_VALIDATION=false
ENABLE_RATE_LIMITING=false
ENABLE_AUTH=false

# ======================
# Testing Configuration
# ======================

# Test environment overrides
TEST_MCP_HOME=${HOME}/.test-mcp-home
TEST_SERVICE_PORT=4567
TEST_CONFIG=test-value

# ======================
# Development Tools
# ======================

# Enable development UI
ENABLE_DEV_UI=true
DEV_UI_PORT=3001

# Enable API documentation
ENABLE_API_DOCS=true
API_DOCS_PATH=/api-docs

# Enable GraphQL playground
ENABLE_GRAPHQL_PLAYGROUND=true

# ======================
# Local Services
# ======================

# Redis for caching (optional)
REDIS_HOST=localhost
REDIS_PORT=6379

# Elasticsearch for search (optional)
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200

# RabbitMQ for messaging (optional)
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672

# ======================
# Development Helpers
# ======================

# Skip certain checks in development
SKIP_SSL_VERIFICATION=true
SKIP_AUTH_CHECKS=false
SKIP_RATE_LIMITS=true

# Mock external services
USE_MOCK_WEATHER_API=false
USE_MOCK_PAYMENT_API=true

# Development timeouts (longer for debugging)
REQUEST_TIMEOUT=300000
DATABASE_TIMEOUT=60000