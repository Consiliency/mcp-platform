# Production Environment Configuration
# Copy this file to .env.production and update with your values

# Security
JWT_SECRET=your-strong-jwt-secret-here
API_KEY_SECRET=your-api-key-secret-here

# Database
POSTGRES_DB=mcp
POSTGRES_USER=mcp
POSTGRES_PASSWORD=your-secure-postgres-password
DATABASE_URL=postgresql://mcp:your-secure-postgres-password@postgres:5432/mcp

# Redis
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your-redis-password-if-needed

# Application
NODE_ENV=production
APP_VERSION=1.0.0
LOG_LEVEL=info

# Monitoring
MONITOR_SERVICES=api,worker,redis,postgres
METRICS_FORMAT=prometheus

# SSL/TLS
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Resource Limits
API_MAX_MEMORY=512M
API_MAX_CPU=1.0
WORKER_MAX_MEMORY=1G
WORKER_MAX_CPU=2.0

# Scaling
API_REPLICAS=2
WORKER_REPLICAS=4

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Alerting
ALERT_EMAIL=ops@example.com
ALERT_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL